generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cidade {
  id       Int       @id @default(autoincrement())
  nome     String
  estado   String
  criadaEm DateTime  @default(now())
  pessoas  Pessoas[]
}

model Pessoas {
  id           Int    @id @default(autoincrement())
  nomeCompleto String
  email        String @unique
  cidadeId     Int
  cidade       Cidade @relation(fields: [cidadeId], references: [id])
}
